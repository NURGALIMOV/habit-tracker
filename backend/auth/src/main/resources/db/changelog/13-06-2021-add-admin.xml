<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="001" author="nurgalimov">
        <createTable tableName="user">
            <column name="id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name="modification_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
            <column name = "first_name" type="text"/>
            <column name = "last_name" type="text"/>
            <column name = "middle_name" type="text"/>
            <column name = "role" type="text"/>
            <column name = "login" type="text">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name = "password" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002" author="nurgalimov">
        <sqlFile dbms="postgresql" splitStatements="false"
                 path="sql/13-06-2021-add-admin.sql"
                 stripComments="false"
                 encoding="utf8"
                 relativeToChangelogFile="true"/>
    </changeSet>

</databaseChangeLog>